extends layout

block content
  h1.heading=title

  for category in category_list
    a(href=category.url class="block p-6 rounded-xl shadow border border-gray-300 mb-6 hover:bg-gray-100")
      h3(class="text-2xl font-medium") #{category.name}
      p #{category.number_of_product + " " + (category.number_of_product > 1 ? "products" : "product")}
  else
    p(class="mb-4") No category added yet.

    a.btn-primary(href="/category/create") Create a new category