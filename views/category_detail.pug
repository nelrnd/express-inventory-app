extends layout

block content
  h1.heading=title

  p=category.description

  if category_product_list.length
    ul
      for product in category_product_list
        li
          a(href=product.url) #{product.name}
          |  - $#{product.price}

  else
    p No product in this category yet.

  hr

  p
    a(href=category.url + "/update") Update category
  p
    a(href=category.url + "/delete") Delete category