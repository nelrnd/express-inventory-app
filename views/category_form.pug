extends layout

block content
  h1=title

  form(action="", method="POST")
    div
      label(for="name") Name
      input(type="text", id="name", name="name", required="true", value=category?category.name:"")
    div
      label(for="description") Description
      textarea(id="description", name="description")
        | #{category?category.description:""}
    div
      label(for="image_url") Image URL
      input(type="url", id="image_url", name="image_url", value=category?category.image_url:"")
    button(type="submit") Submit

  if errors
    ul
      for error in errors
        li #{error.msg}